pipeline
{
    agent any
    stages
    {
        stage('Download source')
        {
            steps {
				script {
					res = sh(script: "test -d /home/$USER/source && echo '1' || echo '0' ", returnStdout: true).trim()
					if(res=='0'){
						sh 'mkdir /home/$USER/source'
					}
				}
            }
        }
        stage('Create image')
        {
            steps {
                sh ''
            }
        }
        stage('Stop old container')
        {
            steps {
                sh ''
            }
        }
        stage('Start new container')
        {
            steps {
                sh ''
            }
        }
        stage('Clear images')
        {
            steps {
                sh ''
            }
        }
        stage('Clear source')
        {
            steps {
                sh ''
            }
        }
    }
}