pipeline
{
    agent any
    stages
    {
        stage('Download source')
        {
            steps {
				script {
					res = sh(script: "test -d /home/source && echo '1' || echo '0' ", returnStdout: true).trim()
					if(res=='0'){
						sh 'sudo mkdir /home/source'
					}
				}

				script {
					res = sh(script: "test -d /home/source/mf.container && echo '1' || echo '0' ", returnStdout: true).trim()
					if(res=='1'){
						sh 'sudo rm -R /home/source/mf.container'
					}
				}

                sh 'sudo mkdir /home/source/mf.container'
                sh 'git clone https://github.com/mistek131995/Freedom.MF.Container.git /home/source/mf.container'
            }
        }
        stage('Create image')
        {
            steps {
                sh ''
            }
        }
        stage('Stop old container')
        {
            steps {
                sh ''
            }
        }
        stage('Start new container')
        {
            steps {
                sh ''
            }
        }
        stage('Clear images')
        {
            steps {
                sh ''
            }
        }
        stage('Clear source')
        {
            steps {
                sh ''
            }
        }
    }
}